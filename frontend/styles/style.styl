article
	height 290px
.control
	margin-top: 10px
	
.title
	margin-top 0px
	color #ffa500
	
.text
	height 40px
	overflow hidden
	transition height 0.5s

.note
	font-size x-small
	
.showDetalis
	font-size: 10px;
	color: #ffa500;
	text-decoration: underline;
	cursor: pointer;
	&:hover
		color: #84662F
.hideImg
	transition height 0.5s
	opacity 0
	height 0px
	overflow hidden
	
.viewDetalis
	height 240px
	overflow auto
	
    
.btnBack
	background-image url('/img/button_bg_white_left.png')
	background-repeat no-repeat
	padding 0
	width 71px
	height 29px
	outline none
	border-radius: 9px
	text-align left 
	padding-left 5px
	&:hover
		background-image url('/img/button_bg_orange_left.png')
		span
			color white
		
.btnForth
	background-image url('/img/button_bg_white_right.png')
	background-repeat no-repeat
	padding 0
	width 71px
	height 29px
	outline none
	border-radius 9px
	text-align right 
	padding-right 5px
	font-weight:700
	&:hover
		background-image url('/img/button_bg_orange_right.png')
		span
			color white

.btnStore
	background-image url('/img/button_bg_white_right.png')
	background-repeat no-repeat
	background-size 100%
	width 140px
	height 29px
	outline none
	border-radius 9px
	text-align right 
	padding-right 5px
	font-weight:700
	float right 
	&:hover
		background-image url('/img/button_bg_orange_right.png')
		span
			color white

